!!! 5
%html{:lang=>'en'} 
  %head
    %title<
      = @title
      = " - CODE CAMP 2012 - HOUSTON, TEXAS - August 20th"
    %meta{'http-equiv'=>'content-type', 'content'=>'text/html; charset=utf-8'}
    = stylesheet_link_tag "application"
    = javascript_include_tag "application"
    = csrf_meta_tag 

  %body
    #header
      .wrapper
        %h1.logo.left<
          %a{:href=>'/'}= "Code Camp 2011 - Aug 20th - Houston Texas"
        .right
          - if logged_in?
            = "Logged in as #{current_user.name}"
            = link_to "Logout", signout_path
          .register
            %a.large-btn{:href => "/schedule"} See the schedule!
        %ul{:id=>'nav', :class=>'right'}
          %li<
            %a{:href=>'/speakers'} Speakers
          %li<
            %a{:href=>'/schedule'} Schedule
          %li<
            %a{:href=>"/sponsors"} Sponsors
          %li<
            %a{:href=>'/location'} Location
    %div{:class=>'wrapper content-full'}
      - flash.each do |f|
        - key = f.first.to_s
        - value = f.second
        .flash{:class=>key}
          = value
      =yield
      .clear
      #footer
        %ul
          %li<
            %a{:href=>'/committee'} Meet The Organizers
          %li<
            %a{:href=>'/contact'} Contact Us
          %li<
            %a{:href=>'/schedule'} The Schedule
          %li<
            %a{:href=>'/location'} Get Directions
          %li HOUSTON CODE CAMP 2011
        .clear

:javascript
  var _gaq = _gaq || [];
  _gaq.push(['_setAccount', 'UA-210379-9']);
  _gaq.push(['_trackPageview']);

  (function() {
    var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
    ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
    var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
  })();
